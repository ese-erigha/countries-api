{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "flask-api",
      "image": "688393454600.dkr.ecr.us-east-2.amazonaws.com/flask-api",
      "essential": false,
      "memory": 128,
      "dependsOn": [
        {
          "containerName": "mongodb",
          "condition": "START"
        },
        {
          "containerName": "elasticsearch",
          "condition": "START"
        }
      ]
    },
    {
      "name": "mongodb",
      "image": "mongo:4.4",
      "essential": true,
      "memory": 64
    },
    {
      "name": "mongo-express",
      "image": "mongo-express",
      "essential": false,
      "memory": 32,
      "dependsOn": [
        {
          "containerName": "mongodb",
          "condition": "START"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "688393454600.dkr.ecr.us-east-2.amazonaws.com/nginx",
      "essential": false,
      "dependsOn": [
        {
          "containerName": "flask-api",
          "condition": "START"
        }
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "memory": 64
    },
    {
      "name": "elasticsearch",
      "image": "688393454600.dkr.ecr.us-east-2.amazonaws.com/elasticsearch",
      "essential": false,
      "memory": 128
    },
    {
      "name": "kibana",
      "image": "688393454600.dkr.ecr.us-east-2.amazonaws.com/kibana",
      "essential": false,
      "memory": 32,
      "dependsOn": [
        {
          "containerName": "elasticsearch",
          "condition": "START"
        }
      ]
    },
    {
      "name": "logstash",
      "image": "688393454600.dkr.ecr.us-east-2.amazonaws.com/logstash",
      "essential": false,
      "memory": 32,
      "dependsOn": [
        {
          "containerName": "elasticsearch",
          "condition": "START"
        }
      ]
    }
  ]
}